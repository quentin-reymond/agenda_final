<UserControl x:Class="brouillon_aganda.View.settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <CheckBox Content="Enable Notifications" Margin="10"/>
            <CheckBox Content="Dark Mode" Margin="10"/>
            <Button Content="Save Settings" Margin="10" 
                    Click="SaveSettings_Click"/>
        </StackPanel>
    </Grid>
</UserControl>