<UserControl x:Class="brouillon_aganda.View.information"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Information" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="This is the information page where you can display various details." 
                       Margin="10" />
            <Button Content="Get More Info" Margin="10" 
                    Click="GetMoreInfo_Click"/>
        </StackPanel>
    </Grid>
</UserControl>